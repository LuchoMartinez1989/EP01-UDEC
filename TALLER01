for (var i = 0; i < numero.length ; i++){
  var num = numero.charAt(i);
  numeroVector[i]=num;
  numeroVector[i];
  

  }
  
num2 =numeroVector.lenght-1;
var a = 0;
var capicua =0;
do {
a++;
num2--;
capicua++;

}while (numeroVector[a] == numeroVector[num2] && a <= numeroVector.lenght-1 )


if (capicua == numeroVector.length-1){
